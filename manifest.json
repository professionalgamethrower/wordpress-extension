{
	"manifest_version": 2,
	"name": "Eye comfort",
	"version": "1.0",
	"description": "Making reading easier on the eyes. For Wordpress sites only.",
	"browser_action": {
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": [
			"event.js"
		],
		"persistent": false
	},
	"permissions": [
		"<all_urls>"
	]
}